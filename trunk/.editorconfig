# tell EditorConfig plug-in, this is root file
root = true
[*]
# endif of line, option "lf", "cr","crlf"
end_of_line = lf

# insert new line at the end of file
insert_final_newline = true

# trim whitespace of line trai
trim_trailing_whitespace = true

# character set
charset = utf-8

# match .py file
[*.py]

#indent style, option "space", "tab"
indent_style = space

# indent space num
indent_size = 4

# tab width
tab_width = 4

[Makefile]
indent_style = tab

